@page "/SubmitMessage"
@model Chirp.Web.Pages.SubmitMessageModel

@if (User.Identity.IsAuthenticated)
{
    <div class="cheepbox">
        <h3>What's on your mind @(User.Identity.Name)?</h3>
        <form method="post" asp-page="SubmitMessage" action="https://httpbin.org/post">
            <input style="float: left" type="text" asp-for="Text" name="Message" value="">
            <input type="submit" value="Share">
        </form>
    </div>
}