@model Chirp.Web.Pages.SubmitMessageModel

@if (User.Identity.IsAuthenticated)
{
    <div class="cheepbox">
    <h3>What's on your mind @(User.Identity.Name)?</h3>
    <form method="post">
        <input style="float: left" type="text" asp-for="Message" name="Message" value="" class="form-control">
        <span asp-validation-for="Message"></span>
        <input type="submit" value="Share">
        @Html.AntiForgeryToken()
    </form>
</div>
}